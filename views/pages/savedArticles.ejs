<!DOCTYPE html>
<html lang="en">
    <head>
        <script src="https://code.jquery.com/jquery.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
        
        <link rel="stylesheet" href="/assets/css/style.css">
        
        <% include ../partials/header-saved.ejs %>

    </head>
    <body>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Saved Articles</h1>
                <p class="lead">Your Saved Articles</p>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div id="articles" class="col-12">
                    <% if(articles.length != 0) { %>

                        <% for(var i=0; i < articles.length; i++){ %>
                            <div class="card">
                                <div class="card-header">
                                    <h3>
                                        <a class="article-link" target="_blank" href=<%= articles[i].url %>>
                                            <%= articles[i].headline%>
                                        </a>
                                    </h3>
                                    <button type="button" class="btn btn-success articleComments" data-toggle="modal" data-target="#showComments" data-article-id=<%= articles[i]._id %>>
                                        Article Comments
                                    </button>
                                    <button type="button" class="btn btn-danger un-save" data-article-id=<%= articles[i]._id %>>
                                        Delete From Save
                                    </button>
                                    
                                </div>
                                <div class="card-body">
                                    <%= articles[i].summary %>
                                </div>
                            </div>
                        <% } %>
                    
                    <% } else{ %>
                        Uh Oh. Looks like we don't have any saved articles.
                    <% } %>
                </div>
            </div>
        </div>

        <div class="modal fade" id="showComments" tabindex="-1" role="dialog" aria-labelledby="showComments" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="articleId"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid text-center">
                        <!-- <h5 class="modal-title" id="articleId"></h5> -->
                        <ul class="list-group-item note-container listComments">
                            <li class="list-group-item">Be the first one to comment!</li>
                        </ul>
                        <textarea id="newComment" placeholder="New Comment" rows="4" cols="50"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success saveComment" data-dismiss="modal">Save Comment</button>
                </div>
                </div>
            </div>
        </div>

    </body>
    <script src="/js/savedArticles.js"></script>
</html>